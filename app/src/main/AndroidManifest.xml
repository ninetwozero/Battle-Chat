<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:versionCode="20"
  android:versionName="2.0"
  package="com.ninetwozero.battlechat">

  <uses-sdk
    android:minSdkVersion="14"
    android:targetSdkVersion="19"/>

  <!-- Used by instrumentation tests only. Do not include in production apps unless necessary! -->
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <!-- End of instrumentation only permissions -->

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
    android:debuggable="true"
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:name=".BattleChat"
    android:theme="@style/AppTheme">

    <activity
      android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
      android:label="@string/app_name"
      android:launchMode="singleTask"
      android:name=".ui.LoginActivity"
      android:windowSoftInputMode="adjustResize|stateHidden">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:label="@string/title_main"
      android:name=".ui.MainActivity"
      android:launchMode="singleTask"
      android:windowSoftInputMode="adjustPan|stateUnchanged"
      />

    <activity
      android:label="@string/title_about"
      android:name=".ui.about.AboutActivity"
      android:parentActivityName=".ui.MainActivity"
      android:theme="@style/AppThemeChildActivity"
      >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.MainActivity"
        />
    </activity>
    <activity
      android:label="@string/title_settings"
      android:name=".ui.settings.SettingsActivity"
      android:parentActivityName=".ui.MainActivity"
      android:theme="@style/AppThemeChildActivity"
      >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.MainActivity"
        />
    </activity>

    <service
      android:icon="@drawable/ic_launcher"
      android:label="@string/service_name"
      android:name=".services.BattleChatService"/>
  </application>

</manifest>
